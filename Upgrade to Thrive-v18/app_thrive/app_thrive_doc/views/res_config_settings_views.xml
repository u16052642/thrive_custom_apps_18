<?xml version="1.0" encoding="utf-8"?>
<thrive>
	<data>
		<record id="view_app_theme_config_settings" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.thrive_doc</field>
            <field name="model">res.config.settings</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="app_thrive_customize.view_app_theme_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='module_app_thrive_doc']/.." position="inside">
                    <div>
                        <field name="app_doc_root_url" class="oe_inline mt8"/>
                        <button string="Set to My Thrive Bureau ERP" type="object" name="action_set_app_doc_root_to_my" class="ml4 oe_highlight"/>
                        <button string="Set to thrivebureau" type="object" name="action_set_app_doc_root_to_thriveai" class="ml4 oe_highlight"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</thrive>
